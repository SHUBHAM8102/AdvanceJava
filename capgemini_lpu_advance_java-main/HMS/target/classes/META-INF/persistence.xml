<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="HospitalERP" transaction-type="RESOURCE_LOCAL">
        <description>Hospital ERP JPA Unit</description>

        <!-- Entity Classes -->
        <class>pom.capgemini.entity.Patient</class>
        <class>pom.capgemini.entity.MedicalRecord</class>
        <class>pom.capgemini.entity.Department</class>
        <class>pom.capgemini.entity.Doctor</class>
        <class>pom.capgemini.entity.Appointment</class>
        <class>pom.capgemini.entity.Prescription</class>

        <properties>
            <!-- PostgreSQL Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/hospital_erp"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <!-- Hibernate Configuration -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>


